@model Online_Food_Ordering.ViewModel.SelectUser

@{
    ViewBag.Title = "ShowAllBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.0.0.js"></script>



<div class="first">

    @foreach (var item in Model.Bill.Select((value, i) => new { i, value }))
    {

        var value = item.value;
        var index = item.i;
        if (index % 2 != 0)
        {
            <div class="block one">
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.Date):
                @Html.DisplayFor(modelItem => item.value.Date, new { htmlAttributes = new { @class = "fontt" } })

                </p>
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.Total_Price):
                @Html.DisplayFor(modelItem => item.value.Total_Price, new { htmlAttributes = new { @class = "fontt" } }) LE
                <p />
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.User.Name) Of Client :
                @Html.DisplayFor(modelItem => item.value.User.Name, new { htmlAttributes = new { @class = "fontt" } }) 

                <p />


                @{
                    if (item.value.User.Image == null)
                    {

                        @Html.DisplayFor(modelItem => item.value.User.Image)

                    }
                    else
                    {





                        var base64 = Convert.ToBase64String(item.value.User.Image);
                        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);


                        <img src='@imgsrc' style="max-width:130px;max-height:130px" border-radius:100%" class="img-circle" />
                    }
                }
                <br/>
                <button type="button" onclick="location.href='@Url.Action("DeleteClient", "Admin", new { id = item.value.ID_Bill})'  ">
                    Delete
                </button>







            </div>



        }
        else
        {
            <div class="block two">
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.Date):
                    @Html.DisplayFor(modelItem => item.value.Date, new { htmlAttributes = new { @class = "fontt" } })

                </p>
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.Total_Price):
                    @Html.DisplayFor(modelItem => item.value.Total_Price, new { htmlAttributes = new { @class = "fontt" } }) LE
                <p />
                <p style="color: white">
                    @Html.LabelFor(modelItem => item.value.User.Name) Of Client :
                    @Html.DisplayFor(modelItem => item.value.User.Name, new { htmlAttributes = new { @class = "fontt" } })

                <p />

                @{
                    if (item.value.User.Image == null)
                    {

                        @Html.DisplayFor(modelItem => item.value.User.Image)

                    }
                    else
                    {





                        var base64 = Convert.ToBase64String(item.value.User.Image);
                        var imgsrc = string.Format("data:image/gif;base64,{0}", base64);


                        <img src='@imgsrc' style="max-width:130px;max-height:130px" border-radius:100%" class="img-circle" />
                    }
                }
                <br />

                <button type="button" onclick="location.href='@Url.Action("DeleteClient", "Admin", new { id = item.value.ID_Bill})'  ">
                    Delete
                </button>










            </div>

        }
    }
</div>



<button type="button" onclick="location.href='@Url.Action("WelcomeAdmin", "Home") ' ">
    Back
</button>


<style>
    .block {
        position: relative;
        text-align: center;
        font-size: large;
        -webkit-animation: scaledown .4se ease;
        animation: scale 0.4s linear;
        animation-fill-mode: forwards;
    }

        .block:hover {
            z-index: 100;
            animation: scale 0.4s linear;
            animation-fill-mode: forwards;
            -webkit-animation: scaledown .4se ease;
        }

    @@keyframes scaledown {

        0% {
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
        }

        100% {
            -webkit-transform: scale(1.0);
            transform: scale(1.0);
        }
    }


    @@keyframes scale {

        0% {
            -webkit-transform: scale(1);
            transform: scale(1);
        }

        100% {
            -webkit-transform: scale(1.1);
            transform: scale(1.1);
            box-shadow: 10px 10px 60px 10px rgba(0,0,0,0.3);
        }
    }


    #first {
        width: 1000px;
        height: auto;
        float: left;
        margin-left: 90px;
    }

    .one {
        width: 300px;
        height: 250px;
        position: relative;
        border: double;
        border-style: none;
        padding-top: 20px;
        margin-top: 20px;
        margin-left: 120px;
        background-color: rgba(86, 30, 56, 0.30);
    }


    .two {
        left: 500px;
        position: absolute;
        width: 300px;
        height: 250px;
        border: double;
        border-style: none;
        padding-top: 20px;
        margin-top: 20px;
        margin-left: 120px;
        background-color: rgba(86, 30, 56, 0.30);
    }
</style>



<script>

    $(document).ready(function () {

        $(".one").mouseenter(function () {
            $(this).width(360);
        })
        $(".one").mouseleave(function () {
            $(this).width(300);

        })

        $(".two").mouseenter(function () {


            $(this).innerWidth(360);
        })
        $(".two").mouseleave(function () {
            $(this).width(300);

        })
    });
</script>

