@model IEnumerable<Online_Food_Ordering.Models.Food>

@{
    ViewBag.Title = "ShowFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.0.0.js"></script>
<div id="first">

@foreach (var item in Model.Select((value, i) => new { i, value }))
{
   
    var value = item.value;
    var index = item.i;
    if (index % 2 != 0)
    {
    <div class="block one">

        @Html.DisplayFor(modelItem => item.value.Name ,new { htmlAttributes = new { @class = "fontt" } })
        <br />

        @Html.DisplayFor(modelItem => item.value.Price, new { htmlAttributes = new { @class = "fontt" } })
        <br />

        @{
            if (item.value.Image == null)
            {

                @Html.DisplayFor(modelItem => item.value.Image)

            }
            else
            {





                var base64 = Convert.ToBase64String(item.value.Image);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);


                <img src='@imgsrc' style="max-width:130px;max-height:130px" border-radius:100%" class="img-circle" />
            }
        }

        <br/>
        <button type="button" onclick="location.href='@Url.Action("EditFood", "Admin", new { id = item.value.ID_Food })'  ">
            Edit
        </button>

        <button type="button" onclick="location.href='@Url.Action("Delete", "Admin", new { id = item.value.ID_Food })'  ">
            Delete
                </button>
      



        
    </div>



            }
            else
            {
                <div class="block two">

                    @Html.DisplayFor(modelItem => item.value.Name, new { htmlAttributes = new { @class = "fontt" } })
                    <br />

                    @Html.DisplayFor(modelItem => item.value.Price, new { htmlAttributes = new { @class = "fontt" } })
                    <br />

                    @{
                        if (item.value.Image == null)
                        {

                            @Html.DisplayFor(modelItem => item.value.Image)

                        }
                        else
                        {





                            var base64 = Convert.ToBase64String(item.value.Image);
                            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);


                            <img src='@imgsrc' style="max-width:130px;max-height:130px" border-radius:100%" class="img-circle" />
                        }
                    }

                    <br/>

                    <button type="button" onclick="location.href='@Url.Action("EditFood", "Admin", new { id = item.value.ID_Food })'  ">
                        Edit
                    </button>

                    <button type="button" onclick="location.href='@Url.Action("Delete", "Admin", new { id = item.value.ID_Food })'  ">
                        Delete
                    </button>





                </div>

                            }
                        }

    <p>
        @Html.ActionLink("Add New Food", "AddFood", "Admin")
    </p>

  
    </div>
   <style>

       

        
        .block {
         position:relative;
            text-align:center;
            font-size:large;
            -webkit-animation:scaledown .4se ease;
          
             animation: scale 0.4s linear;
            animation-fill-mode:forwards;
          
        
        }
        .block:hover{

            z-index:100;
            animation: scale 0.4s linear;
            animation-fill-mode:forwards;
             -webkit-animation:scaledown .4se ease;

        }

      @@keyframes scaledown{

        0% {
        
        -webkit-transform:scale(1.1);
        transform: scale(1.1);
        
        }
        
        100% {
        
        -webkit-transform:scale(1.0);
        transform: scale(1.0);
        
        }

        }


       @@keyframes scale{

        0% {
        
        -webkit-transform:scale(1);
        transform: scale(1);
        
        }
        
        100% {
        
        -webkit-transform:scale(1.1);
        transform: scale(1.1);
        box-shadow: 10px 10px 60px 10px rgba(0,0,0,0.3);
        
        }

        }


         #first {
            width: 1000px;
            height: auto;
            float: left;
            margin-left:90px;
            
        }
       
        .one {
            width: 300px;
            height: 250px;
            
            position:relative;
            border:double;
            border-style:none;
            
            top: auto;
           padding-top:20px;
           margin-top:20px;
           margin-left:30px;
           background-color:rgba(86, 30, 56, 0.30);
            
        }


         .two {
          top:auto;
          left : 500px;
          position:absolute;
       
            width: 300px;
            height: 250px;
            
            border:double;
            border-style: none;
             padding-top:20px;
              margin-top:20px;
              margin-left:120px;
              background-color:rgba(86, 30, 56, 0.30);
        }

   </style>



<script>

    $(document).ready(function () {

        $(".one").mouseenter(function () {
            $(this).width(360);
        })
        $(".one").mouseleave(function () {
            $(this).width(300);

        })

        $(".two").mouseenter(function () {

          
            $(this).innerWidth(360);
        })
        $(".two").mouseleave(function () {
            $(this).width(300);

        })
    });
    </script>